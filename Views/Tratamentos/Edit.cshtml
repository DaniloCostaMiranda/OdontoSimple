@model OdontoSimple.Models.ViewModels.TratamentoFormViewModel


<h4>Editar Tratamento:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Tratamento.Id" />
            <div class="form-group">
                <label asp-for="Tratamento.Data" class="control-label"></label>
                <input asp-for="Tratamento.Data" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Tratamento.PacienteId" class="control-label"></label>
                <select asp-for="Tratamento.PacienteId" asp-items="@(new SelectList(Model.Pacientes,"Id","Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Tratamento.Medicamentos" class="control-label"></label>
                <input asp-for="Tratamento.Medicamentos" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Tratamento.Exames" class="control-label"></label>
                <input asp-for="Tratamento.Exames" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Tratamento.DenteId" class="control-label"></label>
                <select asp-for="Tratamento.DenteId" asp-items="@(new SelectList(Model.Dentes,"Id","Nome"))" class="form-control"></select>
            </div>
            <div class="form-grup">
                <input type="submit" value="SALVAR" class="btn btn-deafult" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">VOLTAR</a>
</div>


