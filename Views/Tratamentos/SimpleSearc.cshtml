@model IEnumerable<OdontoSimple.Models.Tratamento>
@{
    ViewData["Title"] = "Tratamentos";
}

<h1>@ViewData["Title"]</h1>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search" asp-action="SimpleSearc">
            <fieldset>
                <legend>Busca Simples</legend>
                <div class="row">
                    <div class="col-lg-6">
                        <label for="minDate">Data Inicial</label>
                        <input type="date" name="minDate" value=@ViewData["minDate"] class="form-control" />
                    </div>

                    <div class="col-lg-6">
                        <label for="maxDate">Data Final</label>
                        <input type="date" name="maxDate" value=@ViewData["maxDate"] class="form-control" />
                    </div>
                </div>
                <div class="col-lg-6 control-label">
                    <label for="pacienteInput">Paciente</label>
                    <input type="text" name="pacienteInput" value=@ViewData["pacienteInput"] class="form-control" />
                </div>
                <button type="submit" class="btn btn-success">Pesquisar</button>
            </fieldset>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Data)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Paciente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Profissional)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Paciente.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Profissional.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.StatusAtual)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
