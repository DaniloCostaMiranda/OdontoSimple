@model IEnumerable<OdontoSimple.Models.Tratamento>
@{
    ViewData["Title"] = "Busca Simples";
}

<h2>@ViewData["Title"]</h2>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Data Inicial</label>
                    <div class="col-lg-10">
                        <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                    </div>
                </div>

                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Data Final</label>
                    <div class="col-lg-10">
                        <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                    </div>
                </div>

                <div class="form-group">
                    <label for="pacienteInput" class="col-lg-2 control-label">Paciente</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" name="pacienteInput" value=@ViewData["pacienteInput"] />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Pesquisar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Data)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Paciente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Exames)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Data)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Paciente.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dente.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Exames)
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
